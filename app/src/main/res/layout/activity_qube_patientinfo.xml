<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".qubeTestResults.QubeSampleReadyActivity">

    <RelativeLayout
        android:id="@+id/relativetoolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/my_gradient">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/back"
                android:layout_width="80dp"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/back" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tool_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/montserrat"
                android:text="Enter Patient Information"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="25dp"
                    android:layout_weight="1"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/img_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/img_1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@id/img_1"
                            android:fontFamily="@font/montserrat"
                            android:text="@string/sample_one"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rl1"
                android:background="@color/colorWhite">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/txt_sample"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:layout_marginLeft="30dp"
                        android:text="Enter patient and sample collecting information"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/montserrat"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="30dp"
                        android:textStyle="bold"
                        android:text="Patient Name"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp" />
                    <EditText
                        android:id="@+id/name"
                        android:layout_width="350dp"
                        android:layout_height="55dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:paddingLeft="20dp"
                        android:fontFamily="@font/montserrat"
                        android:textSize="14sp"
                        android:hint="Enter name"
                        android:background="@drawable/roundcorner"
                        android:gravity="center_vertical" >
                    </EditText>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/montserrat"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="30dp"
                        android:textStyle="bold"
                        android:text="Date of Sample Collection"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp" />
                    <EditText
                        android:id="@+id/date"
                        android:layout_width="350dp"
                        android:layout_height="55dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/montserrat"
                        android:paddingLeft="20dp"
                        android:textSize="14sp"
                        android:hint="Select Date"
                        android:background="@drawable/roundcorner"
                        android:gravity="center_vertical" >
                    </EditText>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/montserrat"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="30dp"
                        android:textStyle="bold"
                        android:text="Time of Sample Collection"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp" />
                    <EditText
                        android:id="@+id/time"
                        android:layout_width="350dp"
                        android:layout_height="55dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:paddingLeft="20dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/montserrat"
                        android:hint="Select Time"
                        android:background="@drawable/roundcorner"
                        android:gravity="center_vertical" >
                    </EditText>

                    <Button
                        android:id="@+id/btn_start"
                        android:layout_width="200dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="80dp"
                        android:background="@drawable/btn_gradient"
                        android:fontFamily="@font/montserrat"
                        android:text="Add to waiting list"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>


